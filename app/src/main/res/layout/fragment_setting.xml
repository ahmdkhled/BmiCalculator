<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9e9e9e">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
    <TextView
        android:text="your Details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:id="@+id/textView3"
        android:padding="5dp"
        android:fontFamily="serif-monospace"
        android:textColor="#212121"
        android:background="@drawable/border"
        android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:orientation="vertical">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Weight"
                 android:paddingLeft="4dp"
                 android:textSize="25sp"
                 android:layout_marginTop="5dp"
                 android:textColor="@color/blue"
                 android:layout_marginBottom="5dp"
                 android:id="@+id/textView4" />

             <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="your weight"
            android:paddingLeft="4dp"
            android:id="@+id/weightSetting"
            android:layout_marginBottom="5dp"/>

         </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:paddingLeft="4dp"
            android:layout_marginTop="5dp"
            android:textSize="25sp"
            android:textColor="@color/blue"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:id="@+id/heightSetting"
            android:paddingLeft="4dp"
            android:hint="your height"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:paddingLeft="4dp"
            android:textSize="25sp"
            android:textColor="@color/blue"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:id="@+id/ageSetting"
            android:hint="your age"
            android:layout_marginBottom="5dp"/>
            </LinearLayout>
        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:divider="@drawable/ic_devider_line"
            android:layout_marginBottom="10dp"
            android:showDividers="middle">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/maleSetting"
                android:button="@drawable/radio_male_inner"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/femaleSetting"
                android:button="@drawable/radio_female_inner"/>
        </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:background="@color/blue"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:fontFamily="casual"
            android:id="@+id/save"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>